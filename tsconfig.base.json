{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@muzzy/front/feature-file-viewer": [
        "libs/front/feature-file-viewer/src/index.ts"
      ],
      "@muzzy/front/feature-upload-zone": [
        "libs/front/feature-upload-zone/src/index.ts"
      ],
      "@muzzy/shared/api-interface": ["libs/shared/api-interface/src/index.ts"],
      "@muzzy/shared/environments": ["libs/shared/environments/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
